{% extends 'base.html.twig' %}

{% block title %}
Produits
{% endblock %}

{% block body %}
    {% for product in products %}
	    <h1>Liste des produits</h1>
	    <section>
		    <h2>{{ product.name }}</h2>
		    <p>Prix:{{ product.price }}€</p>
		    <p>Catégorie:{{ product.category.name }}</p>
            <a class="action_button" href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
	</section>
    {% endfor %}
{% endblock %}