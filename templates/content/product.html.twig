{% extends 'base.html.twig' %}

{% block title %}Produits
{% endblock %}

{% block body %}
	<h1>Liste des produits</h1>
	<section>
		<h2>{{ product.name }}</h2>
		<p>{{ product.description }}</p>
		<p>Prix:
			{{ product.price }}
			€</p>
		<p>Catégorie:
			{{ product.category.name }}</p>
		<p>Vendeur :
			{{ product.vendor.firstname }}
			{{ product.vendor.lastname }}</p>
	</section>
{% endblock %}
